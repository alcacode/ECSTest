{
        "compilerOptions": {
                "baseUrl": "./",
                "target": "es2018",
                "noImplicitAny": true,
                "removeComments": true,
                "preserveConstEnums": true,
                "sourceMap": true,
                "outDir": "./build/",
                "alwaysStrict": true,
                "lib": [
                        "dom",
                        "es2015",
                        "es2016",
                        "es2017"
                ]
        },
        "include": [
                "src/main.ts",
                "src/core/components/*.ts",
                "src/core/components/components.d.ts", "src/core/EntityManager.ts", "src/core/ComponentManager.ts"
        ],
        "exclude": [
                "build",
                "node_modules",
                "**/*.spec.ts"
        ]
}